{
  "name": "mon-projet-vite",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:ipad": "vite --host --port 5173",
    "build": "VITE_BUILD_TIME=$(date -u +%Y-%m-%dT%H:%M:%SZ) VITE_BRANCH=$(git rev-parse --abbrev-ref HEAD 2>/dev/null || echo local) VITE_COMMIT_REF=$(git rev-parse HEAD 2>/dev/null || echo dev) vite build",
    "preview": "vite preview",
    "preview:netlify": "netlify dev",
    "serve:netlify": "npm run build && netlify serve",
    "type-check": "tsc --noEmit",
    "build:verify": "npm run type-check",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx,js,jsx}\" --fix",
    "format": "prettier --write .",
    "save": "bash ./auto-commit.sh",
    "save:msg": "bash ./auto-commit.sh \"feat: update\"",
    "predeploy:netlify": "npm run build:verify && npm run build",
    "deploy:netlify:preview": "netlify deploy --build --dir=dist --alias=preprod",
    "deploy:netlify:draft": "netlify deploy --dir=dist",
    "release": "scripts/build_and_release.sh",
    "release:prod": "NETLIFY_DEPLOY=1 scripts/build_and_release.sh"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "@types/dexie": "^1.3.32",
    "date-fns": "^4.1.0",
    "dexie": "^4.2.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.536.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-to-print": "^3.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^24.2.1",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.35.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.0.4"
  }
}
